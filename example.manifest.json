{
  "manifest_version": 3,
  "name": "Lazel",
  "short_name": "Lazel",
  "description": "Auto calendar and task manager",
  "key": "YOUR_KEY",
  "version": "1.0",
  "action": {
    "default_popup": "hello.html",
    "default_icon": {
      "16": "logo/logo_16.png",
      "48": "logo/logo_48.png",
      "128": "logo/logo_128.png"
    }
  },
  "icons": {
    "16": "logo/logo_16.png",
    "48": "logo/logo_48.png",
    "128": "logo/logo_128.png"
  },
  "oauth2": {
    "client_id": "YOUR_CLIENT_ID",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/calendar.events",
      "https://www.googleapis.com/auth/tasks"
    ]
  },
  "permissions": ["identity", "storage", "activeTab"]
}
